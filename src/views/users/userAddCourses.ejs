<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

<main class="profileEdit--main">

    <section class="profileUserMenu--section">
        <div class="profileUserMenu--sectionContainer">
            <div class="profileMenu--imageContainer">
            <img src="/database/images/users/<%=user.avatar %>" alt="Avatar de <%= user.name%>">
            <h2><%= user.name %></h2>
        </div>
        
        <div class="profileUserMenu--options">
        
        <a href="/profile/<%=user.id %>/edit"><h3>Perfil</h3></a>
        
        <a href="/profile/<%=user.id %>/edit-security"><h3>Seguridad de Cuenta</h3></a>
        
        <a href="/profile/<%=user.id %>/my-courses"><h3>Cursos (WIP)</h3></a>
        
        <div class="profileUserMenu--selected"> <a href="/profile/<%=user.id %>/create"><h3>Creación de Cursos</h3></a></div>
        
        <a href="/profile/<%=user.id %>/delete-account"><h3>Cerrar Cuenta</h3></a> 
        </div>
        
        </div>
        </section>
    
<section class="profileEdit--section">

    <div class="profileEdit--sectionContainer">
    
        <div class="profileEdit__title"><h1>Creación de Cursos</h1></div>

        <div class="profileEdit__formsContainer">

            <article class="coursesListSearch--box">
                <div class="productListSearch__searchBar">
                    <label for=""></label>
                    <input placeholder="Buscar cualquier cosa" type="text" name="" id="">
                    <button class="productListSearch__searchButton"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
               
                <div class="productListSearch__selectBar">
                <div class="productListSearch__selectContainer">
                    <label for="category"></label>
            
                    <select name="category" id="category">
                    <option class="selectGrey" selected disabled>-- Seleccionar categoría --</option>
                    
        
        </select>
                </div>
                
                <div class="productListSearch__selectContainer">
                    <select name="subcategory" id="subcategory">
                        <option class="selectGrey" selected disabled>-- Seleccionar subcategoría --</option>
                    
                       </select>
                </div>
                
                <button class="productListSearch__filterCategoriesButton"><i class="fa-solid fa-filter"></i></button>
            </div>
            </article>

            <button class="addNewProduct--button" type="button" onclick="location.href='/products/add'"> <i class="fa-solid fa-square-plus"></i> Crear un nuevo curso</button>

            <div class="productListAddCourses--inside">

                <% userProducts.forEach(userProduct => { %>
                <article class="productList--card">
                    <img src="/database/images/courses/<%= userProduct?.image %>" alt="imagen del curso"> 
                    <div class="productList--cardStructure">
                    <div class="productList--cardStructureInside">
                    <h3 class="productList--card__title"><%= userProduct.title %> </h3>
                    <div class="ratingProductList--container">
                    <div class="recommendationsProductList--card__rating-Stars">
                        <span><%= userProduct.rating %></span> 
                        <i class="fa-solid fa-star"></i>
                    </div>
            
                    <div class="recommendationsProductList--card__rating-Reviews">
                        <i class="fa-solid fa-users"></i>
                        <span><%= userProduct.reviews %></span> 
                    </div>
                </div>
                    
                    <div class="productList--card__tag">
                        
                        <p class="productList--card__tagTitle"
                        style="border: solid <%= userProduct.categories?.borderColor %> 1px;
           background-color: <%= userProduct.categories?.backgroundColor %> "><%= userProduct.categories?.name %></p>
                    </div>
                     
                </div>
                   
                    <div class="productList--userAdd__salesContainer">  
                    <div class="productList--card__optionsContainer">
                        <a href="/products/detail/<%= userProduct.id %>"><button type="button"><i class="fa-solid fa-magnifying-glass"></i></button> </a>
                        <a href="/products/edit/<%= userProduct.id %>"> <button type="button"><i class="fa-solid fa-pen"></i></button> </a>
                        <form action="/products/delete/<%= userProduct.id %>?_method=DELETE" method="post">
                        <button ><i class="fa-solid fa-trash"></i></button>
                        </form>
            
                    </div>
                 
                    <span class="coursesSales--container"><span class="numberSales"> <%= userProduct.timesBought %> </span> <i class="fa-solid fa-sack-dollar"></i></span>
                    </div>
                </div>
                </article>
                <% }); %>

               

</div>
